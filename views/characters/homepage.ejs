<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Granblue Fantasy Versus Hub</title>
        <link rel="stylesheet" href="/css/homepage.css">
        <script src="/scripts/app.js"></script>
    </head>
    <body>
        <div class="container">
            <%- include ('../partials/header.ejs') %>

            <div class="landing">
                <img src="/img/landingImage.png" alt="" class="landing-page-image">
            </div>

            <section class='card-section' id="cards">
                <div class="cards">
                    <div class="featured-video card-section">
                        <div class="card-content">
                            <h1>Featured Video</h1>
                            <iframe class="video" src="https://www.youtube.com/embed/udw9jGsdnNg" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            <h2 class="video-details">Yoritomo (Cagliostro) Vs Elsword (Narmaya)</h2>
                            <h3 class="video-details">Title</h3>
                            <p class="video-details">Granblue Fantasy Versus Season 2 Yoritomo (Cagliostro) Vs Elsword (Narmaya) FT2!!【GBVS】グラブルVS</p>
                            <% if (currentUser && (currentUser.username === 'dorta')) {%>
                                <button type="button" name="button" class="join-btn" >Change Video</button>
                            <% } %>
                        </div>
                    </div>
                    <div class="card-section">
                        <div class="card-content ">
                            <h1>Open Lobbies</h1>
                            <div class="open-lobbies">
                                <div class="lobby">
                                    <ul>

                                        <% for (let i = 0; i < lobbies.length;i++) { %>
                                            <li>
                                                <h4>Username <%= lobbies[i].username %></h4>
                                                <h4>Platform<%= lobbies[i].platform %></h4>
                                                <p class="lobby-link">Lobby: <%= lobbies[i].link %></p>
                                                <% if (currentUser && (currentUser.username === lobbies[i].username)) {%>
                                                    <form class="" action="/gbh/delete/<%= lobbies[i].id %>?_method=DELETE" method="POST">
                                                        <input type="submit"  value="DELETE" class="join-btn" >
                                                    </form>
                                                <% } %>
                                            </li>

                                        <% } %>
                                    </ul>
                                </div>
                                <% if (!currentUser) {%>
                                    <h4>In order to see lobbies you must log in</h4>
                                    <a href="/sessions/new" class="add-lobby">Sign Up</a>
                                <% }else { %>
                                    <a href="/lobby/add-lobby" class="add-lobby">+ Add a Lobby</a>
                                <% } %>
                            </div>

                        </div>
                    </div>

                </div>
            </section>

        </div>
    </body>
</html>
