<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Granblue Hub</title>
        <link rel="stylesheet" href="/css/logIn.css">
    </head>
    <body>
        <div class="container">
            <%- include ('../partials/header.ejs') %>
            <div class="loginPage">
                <h1 class="text">Log In</h1>
                <form class="text" action="/sessions" method="POST">
                    <fieldset class="form-div">
                        <label for="username" class="form-labels">Username:</label>
                        <input type="text" name="username">
                    </fieldset>
                    <fieldset class="form-div">
                        <label for="password" class="form-labels">Password:</label>
                        <input type="password" name="password">
                    </fieldset>
                    <div class="btn-section">
                        <input class="log-in-button btns" type="submit" name="" value="Log In">
                            <a href="/users/signup" class="sign-up-btn btns">Sign Up</a>
                    </div>

                </form>
            </div>

        </div>

    </body>
</html>
